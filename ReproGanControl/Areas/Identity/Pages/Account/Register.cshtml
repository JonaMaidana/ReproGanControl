@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<div class="form-wrapper" style="display: flex; justify-content: center; align-items: stretch; max-width: 900px; margin: auto; background-color: #ffffff; border-radius: 15px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); overflow: hidden; min-height: 500px;">
    <main class="form-side" style="flex: 1; background-color: #fafcff; padding: 20px;">
        <form id="account" method="post" class="my-form">
            <div class="divider" style="display: flex; align-items: center; justify-content: space-between; margin: 20px 0;">
                <div class="divider-line" style="flex: 1; height: 1px; background-color: #ccc;"></div>
                <a href="/" class="text-dark text-decoration-none" style="margin: 0 10px;">
                    <img src="~/img/logo11.jpg" alt="Logo" width="70" style="border-radius: 10%; border: 2px solid rgb(0, 0, 0);">
                </a>
                <div class="divider-line" style="flex: 1; height: 1px; background-color: #ccc;"></div>
            </div>
            <div class="text-field">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" required />
                <div class="error-message" asp-validation-for="Input.Email">El formato del email es incorrecto</div>
            </div>
            <div class="text-field">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" required />
                <div class="error-message" asp-validation-for="Input.Password">Ingresa tu contraseña</div>
            </div>
            <div class="text-field">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirma tu Contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="Contraseña" required />
                <div class="error-message" asp-validation-for="Input.ConfirmPassword">Confirma tu contraseña</div>
            </div>
            <button id="registerSubmit" type="submit" class="my-form__button" style="background-color: #000000; color: #fff; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Registrarse</button>
            <div class="my-form__actions" style="margin-top: 20px;">
                <div class="my-form__row" style="display: flex; justify-content: space-between;">
                    <span>Ya tienes cuenta?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" title="Sign Up" style="color: #000000;">Ingresa</a>
                </div>
            </div>
        </form>
    </main>
    <aside class="info-side" style="flex: 1; background: url('/img/vacas.jpg') no-repeat center center / cover; min-height: 500px;"></aside>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}