@{
    ViewData["Title"] = "Listado de Vacas";
}

<div class="container-fluid">
    <div class="card" style="font-family: 'Arial', sans-serif; width: 100%; max-width: 100%; margin: 20px auto;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="display-6" style="color: #555;">Listados de Vacas</h3>
        </div>

        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="secar-tab" href="@Url.Action("InformeSecar", "Eventos")" role="tab"
                        aria-controls="secar" aria-selected="true">Vacas a Secar</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="parir-tab" data-bs-toggle="tab" href="#parir" role="tab"
                        aria-controls="parir" aria-selected="true">Vacas a Parir</a>
                </li>
            </ul>

            <div class="tab-content mt-3" id="myTabContent">
                <!-- Contenido Vacas a parir -->
                <div class="tab-pane fade show active" id="parir" role="tabpanel" aria-labelledby="parir-tab">
                    <div class="table-responsive mt-2">
                        <table id="tabla-imprimir-parir" class="content-table">
                            <thead>
                                <tr>
                                    <th>Caravana</th>
                                    <th>Fecha Aprox. de Secado</th>
                                    <th>Días Restantes</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-vacas-parir">
                                <!-- Datos de Vacas a parir se insertan aquí -->
                            </tbody>
                        </table>

                        <!-- Sección de alerta para vacas próximas a parir -->
                        <div class="alert alert-warning d-flex align-items-center" role="alert"
                            style="position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
                            <i class="fa-solid fa-exclamation-triangle me-2"></i>
                            <div id="alerta-proximas-vacas"></div>
                        </div>

                    </div>

                    <!-- Canvas para el gráfico de Vacas a parir -->
                    <canvas id="chart-parir" style="height: 300px; width: 100%;"></canvas>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/vacasParir.js"></script>
}