@{
    ViewData["Title"] = "Informe Eventos";
}
<div class="card" style="font-family: 'Arial', sans-serif;">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h3 class="display-6" style="color: #555;">Informe de Eventos</h3>
    </div>
    <div class="card-body">
        <!-- Filtros -->
        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <label for="TipoEventoBuscarID" class="form-label">Buscar Tipo Animal</label>
            @Html.DropDownList("TipoEventoBuscarID", null, htmlAttributes: new
                {
                    @class = "form-control",
                    onchange = "ListadoInformeEventos()"
                })
        </div>
        @* <div class="col-12 col-md-6 col-lg-3 mb-3">
            <label for="EstadoID" class="form-label">Buscar Estado Animal</label>
            @Html.DropDownList("EstadoID", null, htmlAttributes: new
                {
                    @class = "form-control",
                    onchange = "ListadoInformeAnimales()"
                })
        </div> *@
        <button class="btn btn-dark" title="Imprimir Informe" onclick="Imprimir()">
            <i class="fa-solid fa-download"></i>
        </button>
        <!-- Modal Structure -->
        <div class="modal fade" id="informeEventosModal" tabindex="-1" aria-labelledby="informeEventosModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="informeEventosModalLabel">Detalles del Evento</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalContentInformeEventos">
                        <!-- Aquí se insertará el contenido del modal -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive mt-2">
            <table id="tabla-imprimir" class="content-table">
                <thead>
                    <tr>
                        <th>Tipo Evento</th>
                        <th>Caravana</th>
                        <th class="ocultar-en-768px">Estado</th>
                        <th class="ocultar-en-768px">Fecha del Evento</th>
                        <th class="ocultar-en-768px">Observacion</th>
                        <th style="width: 70px"></th>
                    </tr>
                </thead>
                <tbody id="tbody-informeEventos">
                    <!-- Los datos se llenarán dinámicamente aquí -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/informeEventos-1.0.0.js"></script>
    <script>
        function Imprimir() {
            var doc = new jsPDF();

            var totalPagesExp = "{total_pages_count_string}";
            var pageContent = function (data) {
                var pageHeight = doc.internal.pageSize.height || doc.internal.pageSize.getHeight();
                var pageWidth = doc.internal.pageSize.width || doc.internal.pageSize.getWidth();

                // FOOTER
                var str = "Pagina " + data.pageCount;
                if (typeof doc.putTotalPages == 'function') {
                    str = str + " de " + totalPagesExp;
                }

                doc.setLineWidth(8);
                doc.setDrawColor(238, 238, 238);
                doc.line(14, pageHeight - 11, 196, pageHeight - 11);

                doc.setFontSize(10);
                doc.setFontStyle('bold');
                doc.text(str, 17, pageHeight - 10);
            };

            // Add title and date to the first page
            doc.setFontSize(18);
            doc.setFontStyle('bold');
            doc.text('Informe de Eventos', 14, 22);

            // Add current date
            var today = new Date();
            var dateString = today.toLocaleDateString(); // Format date as needed
            doc.setFontSize(12);
            doc.setFontStyle('normal');
            doc.text('Fecha: ' + dateString, 14, 32);

            var elem = document.getElementById("tabla-imprimir");
            var res = doc.autoTableHtmlToJson(elem);


            doc.autoTable(res.columns, res.data, {
                addPageContent: pageContent,
                theme: 'grid',
                styles: { fillColor: [70, 130, 180], halign: "center" },
                columnStyles: {
                    0: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    1: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    2: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    3: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    4: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    5: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    6: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    7: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] }
                },
                margin: { top: 40 } // Adjust top margin for title
            });

            if (typeof doc.putTotalPages === 'function') {
                doc.putTotalPages(totalPagesExp);
            }

            var string = doc.output('datauristring');
            var iframe = "<iframe width='100%' height='100%' src='" + string + "'></iframe>"

            var x = window.open();
            x.document.open();
            x.document.write(iframe);
            x.document.close();
        }
    </script>
}