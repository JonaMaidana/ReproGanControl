@{
    ViewData["Title"] = "Provincias";
}

<div class="card" style="font-family: 'Arial', sans-serif;">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h3 class="display-6" style="color: #555;">Provincias</h3>
        <button type="button" class="btn btn-secondary" onclick="NuevaProvincia()" data-bs-toggle="modal"
            data-bs-target="#ModalProvincia">
            <i class="fa-solid fa-plus"></i> Nueva Provincia
        </button>
    </div>

    <div class="card-body">

        <!-- Contador de elementos -->
        <div id="table-info" class="me-3 text-end">
            <span id="total-items-provincia">Provincias cargadas: 0</span>
        </div>


         <!-- Sección de Filtros -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-3 mb-3">
                    <label for="BuscarProvincia" class="form-label">Buscar Provincias</label>
                    <input type="text" id="BuscarProvincia" onkeyup="ListadoProvincia()" class="form-control"
                        style="text-transform: uppercase;" placeholder="Buscar" />
                </div>
            </div>
        </div>
    </div>
        <!-- Modal de Información del Animal -->
        <div class="modal fade" data-bs-backdrop="static" id="ModalProvincia" tabindex="-1"
            aria-labelledby="animalModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalTitulo"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="LimpiarModal()"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <input type="hidden" id="ProvinciaID" value="0" />
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="Nombre" class="form-label">Nombre <span
                                            class="required-asterisk">*</span></label>
                                    <input type="text" class="form-control" id="Nombre"
                                        style="text-transform: uppercase;" placeholder="Nombre de la Provincia"
                                        maxlength="15">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer" style="display: flex; justify-content: flex-start; align-items: center;">
                        <p style="font-weight: bold; text-transform: uppercase; color: rgb(19, 18, 18); margin: 0;">
                            Complete el campo requerido antes de guardar <span class="required-asterisk">*</span>
                        </p>
                        <div style="margin-left: auto;">
                            <button type="button" onclick="LimpiarModal()" class="btn btn-secondary"
                                data-bs-dismiss="modal">Cancelar</button>
                            <button type="button" onclick="GuardarProvincias()" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive mt-2">
            <table id="tabla-imprimir" class="content-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th style="width: 70px"></th>
                        <th style="width: 70px"></th>
                    </tr>
                </thead>
                <tbody id="tbody-provincia">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/provincias-1.0.0.js"></script>
}