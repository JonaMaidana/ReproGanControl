@{
    ViewData["Title"] = "Provincias";
}

<div class="card" style="font-family: 'Arial', sans-serif;">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h3 class="display-6" style="color: #555;">Provincias</h3>
        <button type="button" class="btn-agregar" title="Agregar Provincia" onclick="NuevaProvincia()" data-bs-toggle="modal"
            data-bs-target="#ModalProvincia">
            <i class="fa-solid fa-plus"></i> <span class="btn-text">Agregar Provincia</span>
        </button>
    </div>

    <div class="card-body">

        <!-- Contador de elementos -->
        <div id="table-info" class="me-3 text-end">
            <span id="total-items-provincia">Provincias cargadas: 0</span>
        </div>
<br>

         <!-- Sección de Filtros -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-3 mb-3">
                    <label for="BuscarProvincia" class="form-label">Buscar Provincias</label>
                    <input type="text" id="BuscarProvincia" onkeyup="ListadoProvincia()" class="form-control"
                        style="text-transform: uppercase;" placeholder="Buscar" />
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" data-bs-backdrop="static" id="ModalProvincia" tabindex="-1" aria-labelledby="provinciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="LimpiarModal()" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="ProvinciaID" value="0" />
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre <span class="required-asterisk">*</span></label>
                        <input type="text" class="form-control" id="Nombre" style="text-transform: uppercase;" placeholder="Nombre de la Provincia" maxlength="15">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <p class="me-auto fw-bold text-uppercase">Campos Obligatorios <span class="required-asterisk">*</span></p>
                <button type="button" onclick="LimpiarModal()" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" onclick="GuardarProvincias()" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
</div>

        <div class="table-responsive mt-2">
        <p class="text-danger d-block d-md-none text-center mb-3">
            BOTÓN AZUL PARA VER MÁS DATOS
        </p>
            <table id="tabla-imprimir" class="content-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th style="width: 70px"></th>
                        <th style="width: 70px"></th>
                    </tr>
                </thead>
                <tbody id="tbody-provincia">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/provincias-1.0.0.js"></script>
}