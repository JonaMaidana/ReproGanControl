@{
    ViewData["Title"] = "Informes Registros Medicos";
}
<div class="card" style="font-family: 'Arial', sans-serif;">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h3 class="display-6" style="color: #555;">Informes Registros Medicos</h3>
    </div>
    <div class="card-body">
        @* <!-- Sección de Filtros -->
        <div class="card mb-3">
        <div class="card-body">
        </div>
        </div> *@
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Botón de Imprimir -->
            <button class="btn-download" title="Descargar Datos" onclick="Imprimir()">
                <i class="fa-solid fa-file-pdf"></i>
                <span class="btn-text">Descargar</span>
            </button>
        </div>

        <!-- Sección de Filtros -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-3 mb-3">
                        <label for="PersonasBuscarID" class="form-label">Busqueda por Veterinario</label>
                        @Html.DropDownList("PersonasBuscarID", null, htmlAttributes: new
                            {
                                @class = "form-control",
                                @onchange = "ListadoInformeRegistroMedico()"
                            })
                    </div>
                    <div class="col-12 col-md-6 col-lg-3 mb-3">
                        <label for="BuscarCaravanaInfo" class="form-label">Busqueda por Caravana</label>
                        <input type="text" id="BuscarCaravanaInfo" onkeyup="ListadoInformeRegistroMedico()"
                            class="form-control" style="text-transform: uppercase;" placeholder="Buscar" />
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Structure -->
        <div class="modal fade" id="registroMedicoModal" tabindex="-1" aria-labelledby="registroMedicoModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="registroMedicoModalLabel">Detalles del Registro Médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalContentRegistroMedico">
                        <!-- Aquí se insertará el contenido del modal -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion" id="accordionExample">
    <!-- Sección del Canvas del Gráfico -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Gráficos
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
            data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class="card mb-3" style="height: 400px;">
                    <div class="card-body h-100">
                        <canvas id="medicalChart" style="height: 100%; width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de la Tabla de Datos -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Tabla de Datos
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
            data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class="table-responsive mt-2">
                    <p class="text-primary d-block d-md-none text-center mb-3">
                        BOTÓN AZUL PARA VER MÁS DATOS
                    </p>
                    <table id="tabla-imprimir" class="content-table">
                        <thead>
                            <tr>
                                <th>Veterinario</th>
                                <th>Caravana</th>
                                <th class="ocultar-en-768px">Fecha</th>
                                <th class="ocultar-en-768px">Enfermedad</th>
                                <th class="ocultar-en-768px">Tratamiento</th>
                                <th class="ocultar-en-768px">Observación</th>
                                <th style="width: 70px"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody-informesRegistroMedico">
                            <!-- Los datos de la tabla se llenarán dinámicamente aquí -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


    </div>
</div>

@section Scripts {
    <script src="~/js/informeRegistroMedico-1.0.0.js"></script>
    <script>
        function Imprimir() {
            var doc = new jsPDF();

            var totalPagesExp = "{total_pages_count_string}";
            var pageContent = function (data) {
                var pageHeight = doc.internal.pageSize.height || doc.internal.pageSize.getHeight();
                var pageWidth = doc.internal.pageSize.width || doc.internal.pageSize.getWidth();

                // FOOTER
                var str = "Pagina " + data.pageCount;
                if (typeof doc.putTotalPages == 'function') {
                    str = str + " de " + totalPagesExp;
                }

                doc.setLineWidth(8);
                doc.setDrawColor(238, 238, 238);
                doc.line(14, pageHeight - 11, 196, pageHeight - 11);

                doc.setFontSize(10);
                doc.setFontStyle('bold');
                doc.text(str, 17, pageHeight - 10);
            };

            // Add title and date to the first page
            doc.setFontSize(18);
            doc.setFontStyle('bold');
            doc.text('Informes Registros Medicos', 14, 22);

            // Add current date
            var today = new Date();
            var dateString = today.toLocaleDateString(); // Format date as needed
            doc.setFontSize(12);
            doc.setFontStyle('normal');
            doc.text('Fecha: ' + dateString, 14, 32);

            var elem = document.getElementById("tabla-imprimir");
            var res = doc.autoTableHtmlToJson(elem);

            // Remove last two columns
            res.columns = res.columns.slice(0, -1);
            res.data = res.data.map(row => row.slice(0, -1));

            doc.autoTable(res.columns, res.data, {
                addPageContent: pageContent,
                theme: 'grid',
                styles: { fillColor: [70, 130, 180], halign: "center" },
                columnStyles: {
                    0: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    1: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    2: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    3: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    4: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    5: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    6: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] },
                    7: { halign: 'center', fontSize: 7, fillColor: [255, 255, 255] }
                },
                margin: { top: 40 } // Adjust top margin for title
            });

            if (typeof doc.putTotalPages === 'function') {
                doc.putTotalPages(totalPagesExp);
            }

            var string = doc.output('datauristring');
            var iframe = "<iframe width='100%' height='100%' src='" + string + "'></iframe>"

            var x = window.open();
            x.document.open();
            x.document.write(iframe);
            x.document.close();
        }
    </script>
}