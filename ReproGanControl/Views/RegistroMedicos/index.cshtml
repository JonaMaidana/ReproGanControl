@{
    ViewData["Title"] = "Registro Medico";
}

<div class="card" style="font-family: 'Arial', sans-serif;">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h3 class="display-6" style="color: #555;">Registros Medicos</h3>
        <div class="mb-2">
            <button type="button" class="btn btn-secondary" onclick="NuevoRegistroMedico()" data-bs-toggle="modal"
                data-bs-target="#ModalRegistroMedico">
                <i class="fa-solid fa-plus"></i> Nuevo Registro Medico
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Botón de Imprimir -->
            <button class="btn btn-dark" onclick="Imprimir()">
                <i class="fa-solid fa-download"></i>
            </button>
            <!-- Contenedor para contador y paginación -->
            <div class="d-flex align-items-center">
                <!-- Contador de elementos -->
                <div id="table-info" class="me-3">
                    <span id="total-items-eventos">Registros Medicos cargados: 0</span>
                </div>

                <!-- Paginación -->
                <nav aria-label="Page navigation example">
                    <ul id="pagination-registrosMedicos" class="pagination mb-0">
                        <!-- Los enlaces de paginación se generarán aquí -->
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Modal de Información del Evento -->
        <div class="modal fade" data-bs-backdrop="static" id="ModalRegistroMedico" tabindex="-1"
    aria-labelledby="RegistroMedicoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTituloRegistroMedico">Información del Evento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    onclick="LimpiarModalRegistroMedico()" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="RegistroMedicoID" value="0" />
                    <div class="row mb-3">
                        <div class="col">
                            <label for="AnimalID" class="form-label">Caravana <span
                                    class="required-asterisk">*</span></label>
                            @Html.DropDownList("AnimalID", (SelectList)ViewBag.AnimalID, htmlAttributes: new
                                {
                                    @class = "form-control"
                                })
                        </div>
                    </div> <!-- Cerrando el div.row -->
                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha<span class="required-asterisk">*</span>
                        </label>
                        <div class="col-sm-6">
                            <input type="date" class="form-control" id="Fecha">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="enfermedad" style="text-transform: uppercase;" class="form-label">Enfermedad<span
                                class="required-asterisk">*</span> </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="Enfermedad">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="tratamiento" style="text-transform: uppercase;" class="form-label">Tratamiento<span
                                class="required-asterisk">*</span> </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="Tratamiento">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="observacion" style="text-transform: uppercase;" class="form-label">Observación</label>
                        <textarea class="form-control" id="Observacion" placeholder="Observación." rows="3"
                            oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px';"></textarea>
                    </div>
                </form> <!-- Cerrando el formulario -->
            </div>
            <div class="modal-footer" style="display: flex; justify-content: flex-start; align-items: center;">
                <p style="font-weight: bold; text-transform: uppercase; color: black; margin: 0;">
                    Completa los campos requeridos antes de guardar <span class="required-asterisk">*</span>
                </p>
                <div style="margin-left: auto;">
                    <button type="button" onclick="LimpiarModalRegistroMedico()" class="btn btn-secondary"
                        data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" onclick="GuardarRegistroMedico()"
                        class="btn btn-success">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

        <!-- Tabla de Eventos -->
        <div class="table-responsive mt-2">
            <table id="tabla-imprimir2" class="content-table">
                <thead>
                    <tr>
                        <th>Caravana</th>
                        <th>Fecha</th>
                        <th>Enfermedad</th>
                        <th>Tratamiento</th>
                        <th>Observación</th>
                        <th style="width: 70px"></th>
                        <th style="width: 70px"></th>
                    </tr>
                </thead>
                <tbody id="tbody-registroMedico">
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/registroMedicos-1.0.0.js"></script>
    <script>
        function Imprimir() {
            var doc = new jsPDF();

            var totalPagesExp = "{total_pages_count_string}";
            var pageContent = function (data) {
                var pageHeight = doc.internal.pageSize.height || doc.internal.pageSize.getHeight();
                var pageWidth = doc.internal.pageSize.width || doc.internal.pageSize.getWidth();

                // FOOTER
                var str = "Pagina " + data.pageCount;
                if (typeof doc.putTotalPages == 'function') {
                    str = str + " de " + totalPagesExp;
                }

                doc.setLineWidth(8);
                doc.setDrawColor(238, 238, 238);
                doc.line(14, pageHeight - 11, 196, pageHeight - 11);

                doc.setFontSize(10);
                doc.setFontStyle('bold');
                doc.text(str, 17, pageHeight - 10);
            };

            // Add title and date to the first page
            doc.setFontSize(18);
            doc.setFontStyle('bold');
            doc.text('Listado de animales', 14, 22);

            // Add current date
            var today = new Date();
            var dateString = today.toLocaleDateString(); // Format date as needed
            doc.setFontSize(12);
            doc.setFontStyle('normal');
            doc.text('Fecha: ' + dateString, 14, 32);

            var elem = document.getElementById("tabla-imprimir");
            var res = doc.autoTableHtmlToJson(elem);

            // Remove last two columns
            res.columns = res.columns.slice(0, -2);
            res.data = res.data.map(row => row.slice(0, -2));

            doc.autoTable(res.columns, res.data, {
                addPageContent: pageContent,
                theme: 'grid',
                headStyles: { halign: 'center' }, // Center align headers
                columnStyles: {
                    0: { halign: 'center', fontSize: 7 },
                    1: { halign: 'center', fontSize: 7 },
                    2: { halign: 'center', fontSize: 7 },
                    3: { halign: 'center', fontSize: 7 },
                    4: { halign: 'center', fontSize: 7 },
                    5: { halign: 'center', fontSize: 7 },
                    6: { halign: 'center', fontSize: 7 },
                    7: { halign: 'center', fontSize: 7 }
                },
                styles: { halign: 'center' }, // Center align all cell content
                margin: { top: 40 } // Adjust top margin for title
            });

            if (typeof doc.putTotalPages === 'function') {
                doc.putTotalPages(totalPagesExp);
            }

            var string = doc.output('datauristring');
            var iframe = "<iframe width='100%' height='100%' src='" + string + "'></iframe>"

            var x = window.open();
            x.document.open();
            x.document.write(iframe);
            x.document.close();
        }
    </script>
}